general {
        colors = true
        interval = 5
}

order += "volume master"
order += "disk /"
order += "ethernet enp0s31f6"
order += "cpu_temperature 0"
order += "load"
order += "tztime local"
order += "tztime local_date"


ethernet enp0s31f6 {
        # if you use %speed, i3status requires the cap_net_admin capability
        format_up = "E: %ip"
        format_down = "E: down"
}

tztime local_date {
        format = "%Y-%m-%d"
}

tztime local {
        format = "%H:%M"
}

load {
        format = "L: %5min"
}

cpu_temperature 0 {
        format = "T: %degrees °C"
        path = "/sys/devices/platform/coretemp.0/hwmon/hwmon2/temp1_input"
}

disk "/" {
        format = "%free"
}

volume master {
        format = "♪: %volume"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}
